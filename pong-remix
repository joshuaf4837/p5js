<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>Pong</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.4.13/p5.js"></script>
    <script>
        
        var ballX; 
        var ballY; 
        //speed of the ball how fast it goes
        var ballSpeedX = 5; 
        var ballSpeedY = 5; 
      
      var score=0;//scoreboard
      
       var paddleHeight = 30; //how tall the paddle is
     

        function setup() {
            createCanvas(800, 600); 
            noCursor(); 
            ballX = width / 2;
            ballY = height / 2; 

        }

        function draw() {
            background("lightblue"); //color of the screen
            moveBall(); 
            checkCollide(); 
            drawPaddle();
            drawBall();
            
           //Score, everytime you hit the paddle the score will increase by 1
             noStroke()
           fill('black')//color of score
         text("Score: "+score,240,30)//score location and text

        }


        function moveBall() {
            ballX = ballX + ballSpeedX; //ball
            ballY = ballY + ballSpeedY; 
 console.log("ballSpeedX: " + ballSpeedX + ", ballSpeedY: " + ballSpeedY);
        }

        function checkCollide() {
           
            if (ballX < 0 || ballX > width) {
                ballSpeedX = ballSpeedX * -1; 
            }

           
            if (ballY < 0) {
                ballSpeedY = ballSpeedY * -1; 
            }

           
            if (ballY > height - paddleHeight) { 
                if (ballX > mouseX && ballX < mouseX + 200) { 
                    ballSpeedY = ballSpeedY * -1; 
                           ballSpeedY = ballSpeedY * +1.1;//speed increases everytime ball is hit
                           score+=1;//adds score everytime paddle is hit
                }    
                else {
                    text("GAME OVER!", width / 2, height / 2);//game is done
                    noLoop(); 
                }
            }
        }

        function drawBall() {
         fill("red")
            noStroke(6); 
            ellipse(ballX, ballY, 20, 20); 
        }

        function drawPaddle() {
        fill("pink")
            strokeWeight(9);
 rect(mouseX, height - paddleHeight - 4, 200, paddleHeight);
        }
    </script>
</head>

<body>

</body>

</html>
